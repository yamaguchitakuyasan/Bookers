
<h1>Books</h1>

<% @books.each do |book| %>
<span><%= book.title %>
<%= link_to "Edit", edit_book_path(@book.id) %>
</span>
<span><%= book.body %></span>
<% end %>

<h1>New book</h1>

  <%= form_for(@book, url: '/books') do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit '投稿' %>

<% end %>